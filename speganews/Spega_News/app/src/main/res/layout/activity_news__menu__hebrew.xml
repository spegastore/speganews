<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.admin.spega_news.News_Menu_Hebrew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/splash_bg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_starhome"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_news_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="News"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_star"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_picture_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Pictures of sana"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_star1"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Politique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Political"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_star11"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Economie_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Business and economics"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star2"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_sport_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Sport"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star4"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_syria_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Syria and the world"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star5"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_localnews_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Local news"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star6"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_morenews_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="More news"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star7"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_culture_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Culture"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star10"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_dino_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Dinosana"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star3"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_health_hebrew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Health"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
