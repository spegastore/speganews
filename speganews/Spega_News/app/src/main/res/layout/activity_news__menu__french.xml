<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.admin.spega_news.News_Menu_French">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/splash_bg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_starhome"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_laune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="La une"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_star"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_pays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Pays"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_star1"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Politique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Politique"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_star2"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Economie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Economie"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star3"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_sport_french"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Sport"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star4"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_evenementslocaux"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Evenements locaux"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star6"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_gouvernorates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Gouvernorates"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_star7"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_presse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Presse"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView_star13"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_cultureetarts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Culture et arts"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_weight="1.60" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star8"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_santeet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Sante et"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star9"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="9dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Environments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Environments"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star10"
                    android:layout_width="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Enseignment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Enseignment"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star11"
                    android:layout_width="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="35dp"

                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Tourismeetsocieties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Tourisme et societies"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
