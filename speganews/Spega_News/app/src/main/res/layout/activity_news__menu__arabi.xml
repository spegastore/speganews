<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.admin.spega_news.News_Menu_Arabi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/splash_bg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_world"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="World"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star1"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_UAE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="UAE"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star2"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_economy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Economy"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star3"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Sports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Sports"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star4"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_Books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Books"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star6"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_culture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Culture"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star7"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_cinema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Cinema"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView_star13"
                    android:layout_width="20dp"

                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_eastwest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1.60"
                    android:text="East and West"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star8"
                    android:layout_width="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_health"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="9dp"
                    android:text="Health"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <View
                android:layout_width="300dp"
                android:layout_height="1.5dp"
                android:layout_marginLeft="25dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star9"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="7dp"
                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_healthclinic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"
                    android:text="Smart Clinic"
                    android:textColor="@android:color/black"
                    android:textSize="19dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star10"
                    android:layout_width="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="65dp"

                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_healthsmart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"
                    android:text="Smart Health"
                    android:textColor="@android:color/black"
                    android:textSize="19dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_star11"
                    android:layout_width="20dp"

                    android:layout_height="20dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="7dp"
                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView_healthhappines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"
                    android:text="Health and Happiness"
                    android:textColor="@android:color/black"
                    android:textSize="19dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
